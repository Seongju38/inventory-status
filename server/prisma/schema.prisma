generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(uuid())
  name      String
  quantity  Int      @default(0)
  location  String?  // 창고/구역 등
  note      String?  // 메모
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}
